{
  "rabbitmq": {
    "host": "<%= @rabbitmq_master %>",
    "vhost": "/sensu",
    "user": "sensu",
    "password": "<%= @node['bluefinops_sensu']['rabbitmq']['password'] %>",
    <% if @node["sensu"]["use_ssl"] %>
    <%= '"port": 5671,
    "ssl": {
      "cert_chain_file": "/etc/sensu/ssl/cert.pem",
      "private_key_file": "/etc/sensu/ssl/key.pem"
    }' %>
    <% else %>
    <%= '"port": 5672' %>
    <% end %>
  },
  "redis": {
    "host": "<%= @redis_master %>",
    "port": 6379
  },
  "api": {
    "host": "localhost",
    "port": 4567
  }
}
